<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="@drawable/back">


    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/htmlButton"
        android:scaleType="fitXY"
        android:src="@drawable/html"
        android:layout_alignTop="@+id/audioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/audioButton"
        android:scaleType="fitXY"
        android:src="@drawable/audio"
        android:layout_above="@+id/pdfButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/videoButton"
        android:scaleType="fitXY"
        android:src="@drawable/video"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/pdfButton"
        android:scaleType="fitXY"
        android:src="@drawable/pdf"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/videoButton"
        android:layout_toEndOf="@+id/videoButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CMS/DMS Mobile App"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ffffff" />

</RelativeLayout>
